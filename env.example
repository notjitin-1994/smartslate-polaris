# Public client-side env vars (Vite exposes variables prefixed with VITE_)

# Supabase
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# App URLs
VITE_SITE_URL=http://localhost:5173
VITE_AUTH_REDIRECT_URL=
VITE_GOOGLE_REDIRECT_URL=


# LLM provider selection (anthropic | openai)
VITE_LLM_PROVIDER=anthropic

# OpenAI (proxied via /api/openai)
# Do NOT expose secrets client-side in production. Server handlers read non-VITE_* fallbacks.
VITE_OPENAI_API_KEY=
VITE_OPENAI_BASE_URL=
VITE_OPENAI_MODEL=gpt-5
VITE_OPENAI_MAX_TOKENS=4096

# Anthropic Claude (proxied via /api/anthropic)
# Do NOT expose secrets client-side in production. Server handlers read non-VITE_* fallbacks.
VITE_ANTHROPIC_API_KEY=
VITE_ANTHROPIC_BASE_URL=
VITE_ANTHROPIC_MODEL=claude-3-5-sonnet-latest
VITE_ANTHROPIC_MAX_TOKENS=12000  # Increased for AI report editing

# Server-side (build/deploy) envs used by API routes and dev proxy
# Prefer setting these in your hosting provider dashboard or .env (not committed)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-5
OPENAI_MAX_TOKENS=12000  # Increased for AI report editing

ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-7-sonnet-latest
ANTHROPIC_MAX_TOKENS=12000  # Increased for AI report editing

# Perplexity API (for research)
VITE_PERPLEXITY_API_KEY=
VITE_PERPLEXITY_BASE_URL=https://api.perplexity.ai
VITE_PERPLEXITY_MODEL=sonar
VITE_PERPLEXITY_GREETING_MODEL=sonar
VITE_PERPLEXITY_ORG_MODEL=sonar pro
VITE_PERPLEXITY_REQUIREMENT_MODEL=sonar reasoning
VITE_PERPLEXITY_PRELIM_MODEL=sonar reasoning
VITE_PERPLEXITY_FINAL_MODEL=sonar reasoning

PERPLEXITY_API_KEY=
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=sonar
PPLX_SERVER_TIMEOUT_MS=115000

# Anthropic server handler timeout (ms)
ANTHROPIC_SERVER_TIMEOUT_MS=115000
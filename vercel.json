{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": { 
      "maxDuration": 120,
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/@vite/(.*)", "dest": "/@vite/$1" },
    { "src": "/@react-refresh", "dest": "/@react-refresh" },
    { "src": "/__vite_ping", "dest": "/__vite_ping" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}


